#include <iostream>
#include <cmath>
using namespace std;

class Segment {
private:
    double x1, y1;
    double x2, y2;
public:
    Segment() {
        x1 = y1 = x2 = y2 = 0;
    }

    Segment(double X1, double Y1, double X2, double Y2) {
        x1 = X1;
        y1 = Y1;
        x2 = X2;
        y2 = Y2;
    }

    ~Segment() {}

    void input() {
        cout << "Введiть x1, y1: ";
        cin >> x1 >> y1;
        cout << "Введiть x2, y2: ";
        cin >> x2 >> y2;
    }

    void output() const {
        cout << "Вiдрiзок: (" << x1 << ", " << y1 << ") - (" << x2 << ", " << y2 << ")\n";
    }

    double length() const {
        return sqrt((x2 - x1) * (x2 - x1) + (y2 - y1) * (y2 - y1));
    }

    void printLength() const {
        cout << "Довжина вiдрiзка: " << length() << endl;
    }

    Segment operator+(const Segment& other) const {
        double dx1 = x2 - x1;
        double dy1 = y2 - y1;
        double dx2 = other.x2 - other.x1;
        double dy2 = other.y2 - other.y1;
        Segment res;
        res.x1 = x1;
        res.y1 = y1;
        res.x2 = res.x1 + dx1 + dx2;
        res.y2 = res.y1 + dy1 + dy2;
        return res;
    }

    Segment operator-(const Segment& other) const {
        double dx1 = x2 - x1;
        double dy1 = y2 - y1;
        double dx2 = other.x2 - other.x1;
        double dy2 = other.y2 - other.y1;
        Segment res;
        res.x1 = x1;
        res.y1 = y1;
        res.x2 = res.x1 + dx1 - dx2;
        res.y2 = res.y1 + dy1 - dy2;
        return res;
    }

    Segment operator*(double k) const {
        Segment res;
        double dx = x2 - x1;
        double dy = y2 - y1;
        res.x1 = x1;
        res.y1 = y1;
        res.x2 = x1 + dx * k;
        res.y2 = y1 + dy * k;
        return res;
    }

    Segment operator/(double k) const {
        Segment res;
        if (k == 0) {
            res = *this;
        } else {
            double dx = x2 - x1;
            double dy = y2 - y1;
            res.x1 = x1;
            res.y1 = y1;
            res.x2 = x1 + dx / k;
            res.y2 = y1 + dy / k;
        }
        return res;
    }

    Segment& operator++() {
        x1 += 1;
        y1 += 1;
        return *this;
    }

    Segment operator++(int) {
        Segment temp = *this;
        x2 += 1;
        y2 += 1;
        return temp;
    }

    Segment& operator--() {
        x1 -= 1;
        y1 -= 1;
        return *this;
    }

    Segment operator--(int) {
        Segment temp = *this;
        x2 -= 1;
        y2 -= 1;
        return temp;
    }

    friend bool operator||(const Segment& a, const Segment& b) {
        double dx1 = a.x2 - a.x1;
        double dy1 = a.y2 - a.y1;
        double dx2 = b.x2 - b.x1;
        double dy2 = b.y2 - b.y1;
        double cross = dx1 * dy2 - dy1 * dx2;
        double eps = 1e-9;
        return fabs(cross) < eps;
    }
};

int main() {
    Segment s1, s2;
    cout << "Перший вiдрiзок:\n";
    s1.input();
    cout << "Другий вiдрiзок:\n";
    s2.input();

    cout << "\nПерший:\n";
    s1.output();
    s1.printLength();

    cout << "\nДругий:\n";
    s2.output();
    s2.printLength();

    Segment sum = s1 + s2;
    cout << "\nСума (s1 + s2):\n";
    sum.output();
    sum.printLength();

    Segment diff = s1 - s2;
    cout << "\nРiзниця (s1 - s2):\n";
    diff.output();
    diff.printLength();

    Segment mul = s1 * 2;
    cout << "\nМасштабування s1 * 2:\n";
    mul.output();
    mul.printLength();

    Segment div = s1 / 2;
    cout << "\nМасштабування s1 / 2:\n";
    div.output();
    div.printLength();

    cout << "\nПрефiксний ++ до s1:\n";
    ++s1;
    s1.output();

    cout << "\nПостфiксний ++ до s1:\n";
    s1++;
    s1.output();

    cout << "\nПрефiксний -- до s2:\n";
    --s2;
    s2.output();

    cout << "\nПостфiксний -- до s2:\n";
    s2--;
    s2.output();

    if (s1 || s2)
        cout << "\nВiдрiзки паралельнi\n";
    else
        cout << "\nВiдрiзки не паралельнi\n";

    return 0;
}
